
<% if false %>
<h1>タスクリスト</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> > <%= task.status %></li>
  <% end %>
</ul>

<%= link_to '新規タスクの投稿', new_task_path %>
%>
<% end %>

<h1>タスク一覧</h1>

<% if @task2s.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>コンテンツ</th>
        <th>ステータス</th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>