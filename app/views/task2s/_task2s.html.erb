<ul class="media-list">
  <% task2s.each do |task2| %>
    <% user = task2.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= task2.created_at %></span>
        </div>
        <div>
          <p><%= task2.content %></p>
        </div>
        <div>
          <% if current_user == task2.user %>
            <%= link_to "Delete", task2, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate task2s %>
</ul>