<% if logged_in? %>

<% if false %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@task2) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'task2s/task2s', task2s: @task2s, user: @user %>
    </div>
  </div>
