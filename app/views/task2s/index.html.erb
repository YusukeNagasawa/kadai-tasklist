<h1>タスク一覧</h1>

<% if @task2s.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>コンテンツ</th>
        <th>ステータス</th></th>
      </tr>
    </thead>
    <tbody>
      <% @task2s.each do |task2| %>
        <tr>
          <td><%= link_to task2.id, task2 %></td>
          <td><%= task2.content %></td>
          <td><%= task2.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @task2s %>
  </div>
<% end %>

