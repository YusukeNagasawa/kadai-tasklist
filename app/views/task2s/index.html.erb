  <% @task2s.each do |task2| %>
    <li><%= link_to task2.id, task2 %> : <%= task2.content %> > <%= task2.status %></li>
  <% end %>
</ul>

<%= link_to '新規タスクの投稿', new_task2_path %>
%>
